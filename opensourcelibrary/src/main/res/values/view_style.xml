<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--分割线-->
    <style name="line_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="line_style_gray" parent="line_style" >
        <item name="android:background">@color/gray_line</item>
    </style>

    <style name="line_style_gray_padding15" parent="line_style" >
        <item name="android:layout_marginLeft">@dimen/dip15</item>
        <item name="android:layout_marginRight">@dimen/dip15</item>
        <item name="android:background">@color/gray_line</item>
    </style>

</resources>